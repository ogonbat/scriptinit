WGETLIST="http://xcb.freedesktop.org/dist/xcb-util-0.4.0.tar.bz2"
MD5SUMLIST="2e97feed81919465a04ccc71e4073313"
REQUIRES="libxcb xorg-env"

###############################################
installation() { # INSTALLING SYSTEM SOFTWARE #
###############################################

./configure $XORG_CONFIG
make

make DESTDIR=${FAKEROOT} install

#################
} # END OF FILE #
#################

